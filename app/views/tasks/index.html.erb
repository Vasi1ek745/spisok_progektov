<div class="flex flex-wrap">
  <% @tasks.each do |task| %>
    <div class="flex w-full max-w-md bg-white border border-gray-200 rounded-lg shadow-xl dark:bg-gray-800 dark:border-gray-700 m-4">
      <div class="flex flex-col justify-between m-3 ">
        <div >
          <h1 class="text-3xl m-2"> <%=task.title %></h1>
        </div>
        <div >
          <p class="text-lg m-2"> <%=task.body %></p>
        </div>
     
        <div >
          <p class="text-lg m-2"> Готовность <%=task.complit_procent %>%</p>
        </div>
       

       <!-- Buttons div --> 
       <div class="flex">
          <div  class="m-2">
            <a  class="bg-cyan-700 hover:bg-cyan-600 text-sm text-white font-bold py-2 px-4 rounded-full" href="/tasks/<%=task.id%>"> 
            подробнее </a>
          </div> 
          <div  class="m-2">
            <a  class="bg-stone-400 hover:bg-stone-500 text-sm text-white font-bold py-2 px-4 rounded-full" href="/tasks/<%=task.id%>/edit"> редактировать </a>
          </div> 
          <div  class="m-2">
            <%= link_to "Удалить", task_path(task), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"}, 
            class:"bg-gray-400 hover:bg-gray-500  text-sm text-white font-bold py-2 px-4 rounded-full" %>
          </div> 
         </div>
      <!-- end -->

      </div>

    </div>
    <% end %>
</div>
